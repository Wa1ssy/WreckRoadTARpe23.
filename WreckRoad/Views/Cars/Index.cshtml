
@model IEnumerable<WreckRoad.Models.Cars.CarIndexViewModel>

    @{ int rowNumber = 1; }
    <div>
        <a asp-action="Add" asp-controller="Cars" type="submit" class="btn btn-primary">Go on find a car for a race</a>
        <a asp-action="Create" asp-controller="Cars" class="btn btn-primary">Create New Car</a>
    </div>
    

    <div class="h1">Your Cars:</div>
    <form method="post">
        <table class="table table-hover">
            <thead>
                <tr>
                    @* Later, once images have been implemented add image here aswell*@
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Type</th>
                    <th scope="col">Status</th>
                    <th scope="col">Level</th>
                    <th scope="col">Build At</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    @* Later, once images have been implemented add image here aswell*@
                    <td>@rowNumber</td>
                    <td>@car.CarName</td>
                    <td>@car.CarType</td>
                    <td>@car.CarLevel</td>
                    <td>@car.CarStatus</td>
                    <td>@car.CarWasBuilt</td>
                    <td>
                        <a asp-action="details" asp-controller="cars" asp-route-id="@car.ID" class="btn btn-info">Car details</a>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
        </table>
    </form>
    @* Missing button for player profile*@
