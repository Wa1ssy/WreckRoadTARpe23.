@model WreckRoad.Models.Accounts.ResetPasswordViewModel

<h2>Reset Password</h2>
<hr />
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Token" type="hidden"/>
    <input asp-for="Email" type="hidden"/>

    <div class="form-group">
        <label asp-for="Password" />
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger" />
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" />
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger" />
    </div>

    <button type="subit" class="btn btn-primary">
        Reset your password
    </button>

</form>